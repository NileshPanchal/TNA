<h1>Listing victims</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Victim img</th>
    <th>Statement</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @victims.each do |victim| %>
  <tr>
    <td><%= victim.name %></td>
    <td><%= victim.description %></td>
    <td><%= victim.victim_img %></td>
    <td><%= victim.statement %></td>
    <td><%= link_to 'Show', victim %></td>
    <td><%= link_to 'Edit', edit_victim_path(victim) %></td>
    <td><%= link_to 'Destroy', victim, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

